{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all topics",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "author": "weegembump",
          "title": "Seafood substitutions are increasing",
          "article_id": 0,
          "topic": "cooking",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "article_img_url": "https://XXXXX.XXXX/",
          "comment_count": 6
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "serves an article object with provided article_id.",
    "queries": [],
    "exampleResponse": {
      "articles": {
        "author": "weegembump",
        "title": "Seafood substitutions are increasing",
        "article_id": 0,
        "body": "Text from the article..",
        "topic": "cooking",
        "created_at": "2018-05-30T15:59:13.341Z",
        "votes": 0,
        "article_img_url": "https://XXXXX.XXXX/"
      }
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "update the value of votes property of the article with the given article_id.",
    "queries": [],
    "exampleResponse": {
      "articles": [
        {
          "author": "weegembump",
          "title": "Seafood substitutions are increasing",
          "article_id": 0,
          "topic": "cooking",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 10,
          "article_img_url": "https://XXXXX.XXXX/",
          "comment_count": 6
        }
      ]
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "serves an array of comments for the given article_id.",
    "queries": [],
    "exampleResponse": {
      "comments": [
        {
          "comment_id": 5,
          "votes": 0,
          "created_at": "2020-11-03T21:00:00.000Z",
          "author": "icellusedkars",
          "body": "I hate streaming noses",
          "article_id": 1
        },
        {
          "comment_id": 2,
          "votes": 14,
          "created_at": "2020-10-31T03:03:00.000Z",
          "author": "butter_bridge",
          "body": "The beautiful thing about treasure is that it exists. Got to find out what kind of sheets these are; not cotton, not rayon, silky.",
          "article_id": 1
        }
      ]
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "allows existing user to post a new comment and return the new comment.",
    "formatOfPosting": {"username": "XXX", "body": "AAA"},
    "queries": [],
    "exampleResponse": {
      "comments": {
        "comment_id": 2,
        "votes": 0,
        "created_at": "2020-10-31T03:03:00.000Z",
        "author": "XXX",
        "body": "AAA",
        "article_id": 1
      }
    }
  }
}
